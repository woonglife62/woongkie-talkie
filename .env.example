# Copy this file to .env and fill in your values
# cp .env.example .env

# [ Application ]
# dev / prod
IS_DEV=prod
PORT=8080

# [ MongoDB ]
MONGODB_URI=mongodb://mongodb:27017
MONGODB_USER=root
MONGODB_PASSWORD=changeme
MONGODB_DATABASE=woongkietalkie

# [ JWT ]
# JWT_SECRET must be at least 32 characters
JWT_SECRET=change-this-to-a-strong-secret-min-32-chars
JWT_EXPIRY=24h

# [ Redis ]
REDIS_ADDR=redis:6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# [ WebSocket ]
# Comma-separated list of allowed WebSocket origins (e.g. https://example.com,https://app.example.com)
# In dev mode, localhost and 127.0.0.1 are always allowed automatically.
# ALLOWED_ORIGINS=https://example.com

# [ TLS ] (optional)
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem

# [ Advanced ] (optional)
# SHUTDOWN_TIMEOUT=30s
# HUB_IDLE_TIMEOUT=5m
# ENABLE_PPROF=false
# ENABLE_METRICS=false
